{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*",
    "src/**/*.d.ts",
    "src/*",
    "vetur.config.js"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve", // or "react" depending on your setup
    "jsxImportSource": "vue",
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ] // Ensure this line exists
    },
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "vite/client"
    ]
  }
}