{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*",
    "src/**/*.d.ts",
    "src/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "vite/client",
    ]
  }
}